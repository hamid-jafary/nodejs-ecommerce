<% if (pages > 0) { %>
<ul class="pagination text-center" style="justify-content: center;">
  <% if (current == 1) { %>
  <li class="page-item disabled"><a class="page-link">صفحه اول</a></li>
  <% } else { %>
  <li class="page-item">
    <a class="page-link" href="<%=home%>page=1">صفحه اول</a>
  </li>
  <% } %> <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %> <% if (i
  !== 1) { %>
  <li class="page-item disabled"><a class="page-link">...</a></li>
  <% } %> <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %> <% if (i
  == current) { %>
  <li class="page-item active"><a class="page-link"><%= i %></a></li>
  <% } else { %>
  <li class="page-item">
    <a class="page-link" href="<%=home%>page=<%= i %>"><%= i %></a>
  </li>
  <% } %> <% if (i == Number(current) + 4 && i < pages) { %>
  <li class="page-item disabled"><a class="page-link">...</a></li>
  <% } %> <% } %> <% if (current == pages) { %>
  <li class="page-item disabled"><a class="page-link">صفحه آخر</a></li>
  <% } else { %>
  <li class="page-item">
    <a class="page-link" href="<%=home%>page=<%= pages %>">صفحه آخر</a>
  </li>
  <% } %>
</ul>
<% } %>
